<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.personal_blog.fragment_geren.about">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        >
        <com.example.personal_blog.fragment_geren.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/zw"
            />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            >
            <TextView
                android:ellipsize="none"
                android:maxLines="12"
                android:scrollHorizontally="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 姓名：曾伟\n\n组内信息：组长\n\n学号：8000116434\n\n班级：软件工程1614\n\n负责模块：首页以及软件框架"
                android:textSize="16dp"/>
        </LinearLayout>
        <View
            android:layout_height="0.5dip"
            android:background="#686868"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        >
        <com.example.personal_blog.fragment_geren.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/wky"
        />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            >
            <TextView
                android:ellipsize="none"
                android:maxLines="12"
                android:scrollHorizontally="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 姓名：王柯宇\n\n组内信息：组员\n\n学号：8000116420\n\n班级：软件工程1614\n\n负责模块：个人中心"
                android:textSize="16dp"/>
        </LinearLayout>
        <View
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        >
        <com.example.personal_blog.fragment_geren.CircleImageView
            android:id="@+id/iv_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/lhc"
            />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            >
            <TextView
                android:ellipsize="none"
                android:maxLines="12"
                android:scrollHorizontally="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 姓名：黎浩淳\n\n组内信息：组员\n\n学号：8000116421\n\n班级：软件工程1614\n\n负责模块：博客"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        >
        <TextView
            android:id="@+id/message"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="120dp"
            android:layout_width="match_parent"
            android:text="知友博客  版本：v1.0"
            android:layout_height="20dp" />
    </LinearLayout>



</LinearLayout>