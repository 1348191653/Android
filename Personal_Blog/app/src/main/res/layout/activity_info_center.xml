<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.personal_blog.fragment_geren.Info_center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.personal_blog.fragment_geren.CircleImageView
            android:id="@+id/circle"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:src="@drawable/bing01" />
        <LinearLayout
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/yonghuming"
                android:layout_width="150dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="60dp"
                android:textSize="50px"
                android:hint="用户名"
                android:textStyle="bold"
                android:textColor="#000000"

                android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/qiandao"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="-15dp"
                    android:background="#ffffff"
                    android:text="签到"/>
                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="30dp"
                    android:background="#ffffff"
                    android:src="@drawable/back"
                    />
        </LinearLayout>
            <TextView
                android:id="@+id/gerenjieshao"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:layout_height="wrap_content"
                android:hint="这个人很懒，什么都没写"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="编辑个人介绍"/>

        <ImageButton
            android:id="@+id/update_info"
            android:layout_marginLeft="220dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ffffff"
            android:src="@drawable/test"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="修改个人信息"/>
        <ImageButton
            android:id="@+id/xiugai_Info"
            android:layout_marginLeft="220dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ffffff"
            android:src="@drawable/test"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="帮助"/>
        <ImageButton
            android:id="@+id/help"
            android:layout_marginLeft="292dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ffffff"
            android:src="@drawable/test"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="关于"/>
        <ImageButton
            android:id="@+id/about"
            android:layout_marginLeft="292dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ffffff"
            android:src="@drawable/test"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_main_logout"
            android:layout_width="300dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="150dp"
            android:background="#35A9D0"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="退出登录"
            />
    </LinearLayout>
</LinearLayout>